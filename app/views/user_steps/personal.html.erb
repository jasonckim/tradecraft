<%= form_for @user, url: wizard_path do |f| %>

  <h3>Tell us about yourself</h3>

  <div><%= f.label :bio %><br />
    <%= f.text_area :bio, rows: 5 %> 
  </div>

  <div><%= f.label :pic, "Upload Profile Picture URL" %><br />
    <%= f.text_field :pic %>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>