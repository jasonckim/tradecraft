<% content_for :body_type do%>
  edituserprofile
<% end %>

<h2 style="text-align:center; color:white">Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="col-md-4 col-md-offset-4"><%= f.text_field :username, autofocus: true, placeholder: 'User Name'%></div>

  <div class="col-md-4 col-md-offset-4"><%= f.email_field :email, autofocus: true, placeholder: 'Email' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="col-md-4 col-md-offset-4"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", hide_label: true %></div>

  <div class="col-md-4 col-md-offset-4"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div class="col-md-4 col-md-offset-4"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", hide_label: true %></div>
  
  <h3></h3>

  <div class="col-md-4 col-md-offset-4"><%= f.label :bio, "Tell us about yourself" %><br />
    <%= f.text_area :bio, rows: 5, hide_label: true %> 
  </div>

  <div class="col-md-4 col-md-offset-4"><%= f.label :pic, "Upload Profile Picture URL" %><br />
    <%= f.text_field :pic, hide_label: true %>
  </div>

  <div class="col-md-4 col-md-offset-4"><%= f.label :zipcode, "Change your Zip Code" %><br />
    <%= f.text_field :zipcode, hide_label: true %>
  </div>

 <div class="col-md-4 col-md-offset-4"><%= f.label :banner_url, "Upload Banner URL" %><br />
    <%= f.text_field :banner_url, hide_label: true %>
  </div>

  <div class="col-md-4 col-md-offset-4"><%= f.submit "Update" %></div>
<% end %>

