<% content_for :body_type do%>
  signuppage
<% end %>

<br>
<h2 style="text-align:center">Sign up</h2>
<br>
<div class="container">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-md-4 col-md-offset-4"><%= f.text_field :username, autofocus: true, hide_label: true, placeholder: 'User Name' %></div>

    <div class="col-md-4 col-md-offset-4"><%= f.email_field :email, autofocus: true, hide_label: true, placeholder: 'Email' %></div>

    <div class="col-md-4 col-md-offset-4"><%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: 'Password' %></div>

    <div class="col-md-4 col-md-offset-4"><%= f.password_field :password_confirmation, autocomplete: "off", hide_label: true, placeholder: 'Password Confirmation' %></div>

    <div class="col-md-4 col-md-offset-4"><%= f.submit "Continue" %></div>
  <% end %>
</div>
